<div class="col-sm-2 form-group">
  <ul class="nav nav-stacked nav-pills">
    <% if params[:tag_name].present? %>
      <li role="presentation" class="<%= "active" if params[:id].nil? %>">
        <a href="/">
          Tag: <%= params[:tag_name] %>
          <div class="badge pull-right">
            <%= @entries.count %>
          </div>
        </a>
      </li>
    <% end %>

    <li role="presentation" class="<%= "active" if params[:id].blank? && params[:tag_name].blank? %>">
      <a href="/">
        All
        <div class="badge pull-right">
          <%= current_user.entries.count %>
        </div>
      </a>
    </li>

    <% @albums.each do |album| %>
      <li role="presentation" class="<%= "active" if album.slug == params[:id] %>">
        <a href="<%= album_path album.slug %>">
          <%= album.name %>
          <div class="badge pull-right">
            <%= album.entries_count %>
          </div>
        </a>
      </li>
    <% end %>

    <li class="divider">&nbsp;</li>

    <li>
      <%= link_to new_album_path, class: 'btn btn-default btn-block' do %>
        <span class="fa fa-plus-square"></span>
        New Album
      <% end %>
    </li>
  </ul>  
</div>