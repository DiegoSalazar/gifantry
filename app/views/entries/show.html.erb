<div class="col-sm-12">
  <%- model_class = Entry -%>
  <h1><%=t '.title', default: Entry %></h1>

  <div class="fieldset">
    <dl>
        <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
        <dd><pre class="prettyprint"><%= @entry.name %></pre></dd>
        <dt class="label label-default"><%= model_class.human_attribute_name(:description) %></dt>
        <dd><pre class="prettyprint"><%= @entry.description %></pre></dd>
        <dt class="label label-default"><%= model_class.human_attribute_name(:image_file_name) %></dt>
        <dd><pre class="prettyprint"><%= @entry.image_file_name %></pre></dd>
        <dt class="label label-default"><%= model_class.human_attribute_name(:image_file_size) %></dt>
        <dd><pre class="prettyprint"><%= @entry.image_file_size %></pre></dd>
        <dt class="label label-default"><%= model_class.human_attribute_name(:image_content_type) %></dt>
        <dd><pre class="prettyprint"><%= @entry.image_content_type %></pre></dd>
    </dl>
  </div>

  <div class="form-group">
    <%= link_to t('.back', default: t("helpers.links.back")),
                entries_path, class: 'btn btn-default'  %>
    <%= link_to t('.edit', default: t("helpers.links.edit")),
                edit_entry_path(@entry), class: 'btn btn-default' %>
    <%= link_to t('.destroy', default: t("helpers.links.destroy")),
                entry_path(@entry),
                method: 'delete',
                data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) },
                class: 'btn btn-danger' %>
  </div>


</div>