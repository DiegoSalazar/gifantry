<% @entry ||= entry %>

<%= form_for @entry, multipart: true, html: { class: 'form-horizontal form-model dropzone' } do |f| %>
  <div class="form-group">
    <%= f.label :album_id, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.collection_select :album_id, Album.all, :id, :name, {}, { class: 'text-field form-control' } %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :image, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.file_field :image, class: 'text-field form-control', multiple: true %>
    </div>
  </div>

  <hr>

  <div class="form-group">
    <%= image_tag @entry.image.url %>
  </div>

  <div class="form-group">
    <%= f.submit nil, class: "btn btn-primary" %>
    <%= link_to "Cancel", :back, class: "btn btn-default" %>
  </div>
<% end %>
