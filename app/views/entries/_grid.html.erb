<div id="entries-container" class="col-sm-10">
  <div class="grid">
    <div id="dropzone-queue" class="dropzone-previews"></div>

    <% if @entries.empty? %>
      <p class="text-center">Drag something here to upload!</p>
    <% else %>
      <%= render "entries/toolbar" %>

      <div id="infinite-entries">
        <%= render partial: "entries/grid_item", collection: @entries %>
      </div>

      <div class="pagination pull-right">
        <%= paginate @entries %>
      </div>
    <% end %>
  </div>
</div>